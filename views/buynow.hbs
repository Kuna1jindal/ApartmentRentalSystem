<style>
    .ques{
        color: rgba(0, 179, 255, 0.858);
        border:2px solid black ;
        width: 100%;
        padding: 8px;
        text-align: left;
    }
    h2{
        font-weight: bold;
        color:rgba(241, 97, 20, 0.898);
    }
    .inline{
        display: flex;
       
    }
    .register-box{
        width: 70%;
        height: 90vh;
    }
    input{
           text-align: center;
           margin: 21px;
           margin-left: 108px;

    }
    .input{
        width: 68.4%;
        margin: 0px auto;
        border:2px solid black ;
        position: relative;
        bottom:298px;
    }
    .submit-button {
    position: relative;
    width: 62%;
    bottom: 282px;
    left: 239px;
}
h4{
