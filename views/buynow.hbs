<body>
    <div class="register-box">
        <h2>Rental Agreement Form</h2>
        <form action="/actualbuy" method="post">
            <div class="inline">
               <div class="ques">Apartment Size:{{apartmentsize}}</div>    
           
            <div class="ques"> Data of Join:{{date_of_join}}</div>
            
           </div>
           <div class="inline">
            <div class="ques">Tenant Name:{{name}}</div>
          
            <div class="ques">Tenant ID:{{email}}</div>
           </div>
           <div class="inline">
            <div class="ques">Owner ID:{{ownerid}}</div>
          
            <div class="ques"> Location of Apartment:{{location}}</div>
           </div>
            <div class="ques">
                monthlypayment:{{monthlypayment}}</div>
           </div>
           <div class="input">
            <h4>Enter expected stay date</h4>
                <input type="date" class="text-margin" name="outdate">
           </div>
            <div >
                <button type="submit" class="submit-button">Buy Now</button>
               
            </div>  
      </form>

    </div>
